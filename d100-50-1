Q100: Print all sub-strings of a string.

/*
Sample Test Cases:
Input 1:
abc
Output 1:
a,ab,abc,b,bc,c

*/
#include <stdio.h>

int main() {
    char str[1000];
    scanf("%s", str);

    int i = 0, j, k;

    while(str[i] != '\0') {
        j = i;
        while(str[j] != '\0') {
            for(k = i; k <= j; k++) {
                printf("%c", str[k]);
            }

            if(str[j + 1] != '\0' || str[i + 1] != '\0')
                printf(",");

            j++;
        }
        i++;
    }

    return 0;
}