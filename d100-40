Q79: Perform diagonal traversal of a matrix.

/*
Sample Test Cases:
Input 1:
3 3
1 2 3
4 5 6
7 8 9
Output 1:
1 2 4 7 5 3 6 8 9

*/
#include <stdio.h>

int main() {
    int r, c;
    scanf("%d %d", &r, &c);

    int mat[r][c];

    for(int i = 0; i < r; i++) {
        for(int j = 0; j < c; j++) {
            scanf("%d", &mat[i][j]);
        }
    }

    for(int sum = 0; sum <= r + c - 2; sum++) {
        if(sum % 2 == 0) {
    
            for(int i = sum; i >= 0; i--) {
                int j = sum - i;
                if(i < r && j < c) {
                    printf("%d ", mat[i][j]);
                }
            }
        } else {
            
            for(int i = 0; i <= sum; i++) {
                int j = sum - i;
                if(i < r && j < c) {
                    printf("%d ", mat[i][j]);
                }
            }
        }
    }

    return 0;
}