Q145: Return a structure containing top students details from a function.

/*
Sample Test Cases:
Input 1:
3 students: Riya 101 89, Karan 102 96, Meena 103 92
Output 1:
Top Student: Karan | Roll: 102 | Marks: 96

*/
#include <stdio.h>

struct Student {
    char name[50];
    int roll;
    int marks;
};

struct Student getTop(struct Student arr[], int n) {
    int i;
    struct Student top = arr[0]; 

    for(i=1; i<n; i++){
        if(arr[i].marks > top.marks){
            top = arr[i]; 
        }
    }
 return top; 
}
int main() {
    struct Student s[10];
    int n = 3, i;

    for(i=0;i<n;i++){
        scanf("%s", s[i].name);
        scanf("%d", &s[i].roll);
        scanf("%d", &s[i].marks);
    }
    struct Student t = getTop(s, n);
    printf("Top Student: %s | Roll: %d | Marks: %d\n",
           t.name, t.roll, t.marks);

    return 0;
}