Q94: Find the longest word in a sentence.

/*
Sample Test Cases:
Input 1:
I love programming
Output 1:
programming

*/
#include <stdio.h>
#include <string.h>

int main() {
    char str[1000];
    char word[1000], longest[1000] = "";
    
    scanf("%[^\n]s", str);

    int maxLen = 0;
    int i = 0, j = 0;

    while(1) {
        j = 0;
        while(str[i] != ' ' && str[i] != '\0') {
            word[j++] = str[i++];
        }
        word[j] = '\0';

        if(strlen(word) > maxLen) {
            maxLen = strlen(word);
            strcpy(longest, word);
        }

        if(str[i] == '\0')
            break;
        i++; 
    }

    printf("%s", longest);

    return 0;
}