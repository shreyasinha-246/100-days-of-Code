Q97: Print the initials of a name.

/*
Sample Test Cases:
Input 1:
John Doe
Output 1:
J.D.

*/
#include <stdio.h>
#include <string.h>

int main() {
    char str[1000];
    scanf("%[^\n]s", str); 

    int i = 0;


    if(str[0] != ' ')
        printf("%c.", str[0]);

    while(str[i] != '\0') {
        if(str[i] == ' ' && str[i + 1] != '\0' && str[i + 1] != ' ') {
            printf("%c.", str[i + 1]);
        }
        i++;
    }

    return 0;
}