Q98: Print initials of a name with the surname displayed in full.

/*
Sample Test Cases:
Input 1:
John David Doe
Output 1:
J.D. Doe

*/
#include <stdio.h>
#include <string.h>

int main() {
    char str[1000];
    scanf("%[^\n]s", str); 

    int i = 0, lastSpace = -1;

    for(int j = 0; str[j] != '\0'; j++) {
        if(str[j] == ' ')
            lastSpace = j;
    }

    i = 0;
    while(i < lastSpace) {
        if(i == 0 && str[i] != ' ')
            printf("%c.", str[i]);
        else if(str[i] == ' ' && str[i + 1] != ' ')
            printf("%c.", str[i + 1]);
        i++;
    }

    if(lastSpace != -1)
        printf(" %s", str + lastSpace + 1);

    return 0;
}